<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:context=".MenuAct" style="@style/menuStyle">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="469dp"
            android:layout_height="252dp" android:gravity="fill_vertical|center"
            android:id="@+id/linearLayout" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.537" app:layout_constraintVertical_bias="0.18"
            android:background="@color/colorPrimary">
        <Button
                android:text="Explore"
                android:layout_width="250dp"
                android:layout_height="50dp" android:id="@+id/button1" android:layout_marginTop="10dp"
        />
        <Button
                android:layout_width="250dp"
                android:layout_height="50dp" android:id="@+id/button2" android:text="Places"
                android:layout_marginTop="10dp"/>
        <Button
                android:text="Settings"
                android:layout_width="250dp"
                android:layout_height="50dp" android:id="@+id/button3" android:layout_marginTop="10dp"
        />
        <Button
                android:text="Credits"
                android:layout_width="250dp"
                android:layout_height="50dp" android:id="@+id/button4" android:layout_marginTop="10dp"
        />
    </LinearLayout>
    <ImageButton
            android:layout_width="68dp"
            android:layout_height="63dp" app:srcCompat="@drawable/user" android:id="@+id/userButton"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent" android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:paddingRight="5dp"/>

</android.support.constraint.ConstraintLayout>