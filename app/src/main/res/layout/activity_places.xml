<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true" android:orientation="vertical">


    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="86dp" android:id="@+id/placeName"
            android:textAlignment="center" android:textStyle="bold" android:layout_marginTop="15dp"
            android:textSize="30sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="417dp"
            android:layout_height="25dp" android:id="@+id/placeDesc" android:layout_weight="1"
            android:padding="5dp"
            android:textSize="14sp"
            android:textColor="@color/cast_expanded_controller_background_color" android:textStyle="italic"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="350dp" android:id="@+id/layy">
    </LinearLayout>
</LinearLayout>